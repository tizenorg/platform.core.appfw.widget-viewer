#if !defined(_WIDGET_INCLUDED)
collections {
#endif
	styles {
		style {
			name: "overlay,text";
			base: "font=Tizen text_class=tizen font_size=30 align=center color=#FFFFFF ellipsis=1.0 wrap=char";
			tag:  "br" "\n";
			tag:  "hilight" "+ font=Tizen:style=Bold";
			tag:  "b" "+ font=Tizen:style=Bold";
			tag:  "tab" "\t";
		}
	}

	group
	{
		name: "layout";
		parts
		{
			part {
				name: "bg,img";
				type: RECT;
				description {
					state: "default" 0.0;
					rel1 { relative: 0.0 0.0; }
					rel2 { relative: 1.0 1.0; }
					color: 100 100 100 100;
				}
				description {
					state: "hide" 0.0;
					inherit: "default" 0.0;
					visible: 0;
				}
			}

			part {
				name: "pepper,widget";
				type: SWALLOW;
				description {
					state: "default" 0.0;
					rel1 { relative: 0.0 0.0; }
					rel2 { relative: 1.0 1.0; }
				}
			}

			part {
				name: "preview";
				type: SWALLOW;
				repeat_events: 1;
				description {
					state: "default" 0.0;
					rel1 { relative: 0.0 0.0; }
					rel2 { relative: 1.0 1.0; }
				}
				description {
					state: "hide" 0.0;
					inherit: "default" 0.0;
					visible: 0;
				}
			}

			part {
				name: "text";
				type: TEXTBLOCK;
				repeat_events: 1;
				description {
					state: "default" 0.0;
					rel1 { relative: 0.0 0.8; to: "preview"; }
					rel2 { relative: 1.0 0.95; to: "preview"; }
					align: 0.5 0.5;
					text {
						style: "overlay,text";
						min: 0 1;
					}
				}
				description {
					state: "hide" 0.0;
					inherit: "default" 0.0;
					visible: 0;
				}
			}
			part {
				name: "event";
				type: RECT;
				mouse_events: 1;
				repeat_events: 1;
				description {
					state: "default" 0.0;
					rel1 { relative: 0.0 0.0; }
					rel2 { relative: 1.0 1.0; }
					color: 255 255 255 0;
					visible: 1;
				}
				description {
					state: "hide" 0.0;
					inherit: "default" 0.0;
					visible: 0;
				}
			}
		}

		programs {
			program {
				name: "enable,preview";
				signal: "enable";
				source: "preview";
				action: STATE_SET "default" 0.0;
				target: "preview";
			}
			program {
				name: "disable,preview";
				signal: "disable";
				source: "preview";
				action: STATE_SET "hide" 0.0;
				target: "preview";
			}
			program {
				name: "disable,loading,text";
				signal: "disable";
				source: "loading,text";
				action: STATE_SET "hide" 0.0;
				target: "text";
				target: "bg,img";
			}
			program {
				name: "enable,loading,text";
				signal: "enable";
				source: "loading,text";
				action: STATE_SET "default" 0.0;
				target: "text";
				target: "bg,img";
			}
			program {
				name: "disable,overlay,text";
				signal: "disable";
				source: "overlay,text";
				action: STATE_SET "hide" 0.0;
				target: "text";
				target: "bg,img";
			}
			program {
				name: "enable,overlay,text";
				signal: "enable";
				source: "overlay,text";
				action: STATE_SET "default" 0.0;
				target: "text";
				target: "bg,img";
			}
			program {
				name: "reload";
				signal: "mouse,clicked,1";
				source: "event";
				action: SIGNAL_EMIT "clicked" "reload";
			}
		}
	}

#if !defined(_WIDGET_INCLUDED)
}
#endif

